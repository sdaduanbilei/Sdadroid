<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme.Light.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/ArrowStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--tab 标签 字体颜色-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->
    </style>


    <style name="AppTheme.Dark.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerArrowStyle">@style/ArrowStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--tab 标签 字体颜色-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->
    </style>

    <style name="AppTheme.Music" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerArrowStyle">@style/ArrowStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--tab 标签 字体颜色-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->
    </style>


    <style name="ArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_launcher</item>
    </style>

    <!--透明Activity-->
    <style name="CustomTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/tansparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>